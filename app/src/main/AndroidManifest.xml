        <activity
            android:name=".InputReadActivity"
            android:label="@string/title_activity_input_read"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".InputReadWebviewActivity"
            android:label="@string/title_activity_input_read_webview"
